<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <shape>
      <corners android:radius="6dp"/>
      <solid android:color="#31d1d4"/>
      <stroke
        android:width="1.5dp"
        android:color="#19657f"/>;
      <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
      <margin
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"/>
    </shape>
  </item>
  <item>
        <shape>
          <gradient android:angle="270" android:endColor="#cec33f" android:startColor="#cec33f"/>
          <corners android:radius="6dp"/>
          <padding
            android:left="2dp"
            android:top="2dp"
            android:right="2dp"
            android:bottom="2dp"/>
          <margin
            android:left="6dp"
            android:right="6dp"
            android:top="6dp"
            android:bottom="6dp"/>
        </shape>
  </item>
</selector>
          
         